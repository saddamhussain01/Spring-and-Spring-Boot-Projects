<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans  
               http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
      
      
   <bean id="address" class="com.spring.Address">
   
   <constructor-arg value = " Kurnool"></constructor-arg>
   
    <constructor-arg value = " Andhra pradesh"></constructor-arg>
    
     <constructor-arg value = " india"></constructor-arg>
   
   </bean>  
   
   <bean id="emp" class ="com.spring.Employee">
   
   <constructor-arg value ="10" type ="int"></constructor-arg>
   <constructor-arg value = "saddam hussain"></constructor-arg>
   <constructor-arg>
  <ref bean="address"/>
   
   </constructor-arg>
 
   
   
   
   </bean>
      
      
      
      
      
      
      
      
      
               
 </beans>